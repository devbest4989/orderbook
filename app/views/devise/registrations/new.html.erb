<div id="register" class="animate form">
  <section class="login_content">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <h1>Create Account</h1>
      <%= devise_error_messages! %>
      <div>
        <%= f.text_field :first_name, autofocus: true, class: "form-control", placeholder: "First Name", :required => true%>
      </div>
      <div>
        <%= f.text_field :last_name, class: "form-control", placeholder: "Last Name", :required => true%>
      </div>
      <div>
        <%= f.email_field :email, class: "form-control", placeholder: "Email Address", :required => true%>
      </div>
      <div>
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password", :required => true %>
      </div>
      <div>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirmation Password", :required => true %>
      </div>
      <div>
        <%= f.submit "Register", class: "btn btn-default submit" %>
      </div>
      <div class="clearfix"></div>
      <div class="separator">

        <p class="change_link">Already a member ?
          <%= link_to "Login", new_session_path(resource_name), class: "to_register" %>
        </p>
        <div class="clearfix"></div>
        <br />
        <div>
          <h1><i class="fa fa-paw" style="font-size: 26px;"></i> OrderBook </h1>
        </div>
      </div>
    <% end %>
    <!-- form -->
  </section>
  <!-- content -->
</div>

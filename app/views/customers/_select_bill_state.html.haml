#bill_state_wrapper
  - parent_region ||= params[:parent_region]
  - country = Carmen::Country.coded(parent_region)
  - if country.nil?
    = text_field :customer, :bill_state, {class: 'form-control'}
  - elsif country.subregions?
    = subregion_select :customer, :bill_state, parent_region, :class => 'form-control'
  - else
    = text_field :customer, :bill_state, {class: 'form-control'}
:javascript
  $(function() {
    $('select#customer_bill_country').addClass('form-control');
    $('select#customer_bill_state').addClass('form-control');
    $('select#customer_bill_country').change(function(event) {
      var country_code, select_wrapper, url;
      select_wrapper = $('#bill_state_wrapper');
      $('select', select_wrapper).attr('disabled', true);
      country_code = $(this).val();
      url = "/customers/bill_state?parent_region=" + $('#customer_bill_country').val();
      select_wrapper.load(url, function(){
      	$('select#customer_bill_state').addClass('form-control');
        $('select#customer_bill_state').after('<ul class="parsley-errors-list"></ul>');
      });
    });
  });

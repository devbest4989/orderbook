.right_col{:role => "main"}
  .left-sub-sidebar
    = render 'nav_people', add_url: new_customer_path(), active_elem: "sub-nav-#{@customer.id}", nav_name: 'Customers', sub_elems: @customers, type: 'show', cat_name: 'Customer'
  .right-content
    .x_panel
      .x_title
        %h2 New Customer
        %ul.nav.navbar-right.panel_toolbox
          %li
            %a.collapse-link
              %i.fa.fa-chevron-up
          %li
            %a.close-link
              %i.fa.fa-close
        .clearfix
      .x_content.form-group-no-margin
        #tab_personal{:class => "tab-pane #{(flash[:last_action]=="update_info" || flash[:last_action] == nil) ? "active" : ""}"}
          = render 'form_info_new'

.col-md-3.left_col
  .left_col.scroll-view
    .navbar.nav_title{:style => "border: 0;"}
      %a.site_title{:href => "/"}
        %i.fa.fa-paw
        %span OrderBook
    .clearfix
    / menu profile quick info
    .profile
      .profile_pic
        = image_tag current_user.avatar.url(:medium), :class => "img-circle profile_img img-thumbnail"
      .profile_info
        %span Welcome,
        %h2 
          = current_user.full_name
    / /menu profile quick info
    %br/
    / sidebar menu
    #sidebar-menu.main_menu_side.hidden-print.main_menu
      .menu_section
        %h3 
          = current_user.role_name
        %ul.nav.side-menu
          %li
            %a{:href => "/"}
              %i.fa.fa-dashboard
              Dashboard
          %li
            %a
              %i.fa.fa-users
              People
              %span.fa.fa-chevron-down
            %ul.nav.child_menu{:style => "display: none"}
              %li
                %a{:href => "/customers"} Customer
              %li
                %a{:href => "/suppliers"} Supplier                
              %li
                = link_to "User", edit_user_path(current_user.id)
          %li
            %a
              %i.fa.fa-cubes
              Inventory
              %span.fa.fa-chevron-down
            %ul.nav.child_menu{:style => "display: none"}
              %li
                %a{:href => "/product_types"} Product Types
              %li
                %a{:href => "/product_list"} Product
          %li
            %a{:href => "/sales_orders"}
              %i.fa.fa-inbox
              Sales Order
          %li
            %a{:href => "/purchase_list"}
              %i.fa.fa-shopping-cart
              Purchase
    / /sidebar menu
    / /menu footer buttons
    .sidebar-footer.hidden-small
      %a{"data-placement" => "top", "data-toggle" => "tooltip", :title => "Settings"}
        %span.glyphicon.glyphicon-cog{"aria-hidden" => "true"}
      %a{"data-placement" => "top", "data-toggle" => "tooltip", :title => "FullScreen"}
        %span.glyphicon.glyphicon-fullscreen{"aria-hidden" => "true"}
      %a{"data-placement" => "top", "data-toggle" => "tooltip", :title => "Lock"}
        %span.glyphicon.glyphicon-eye-close{"aria-hidden" => "true"}
      %a{"data-placement" => "top", "data-toggle" => "tooltip", :title => "Logout", :href => destroy_user_session_path()}
        %span.glyphicon.glyphicon-off{"aria-hidden" => "true"}
    / /menu footer buttons
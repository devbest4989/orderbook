.right_col.products-wrapper{:role => "main"}
  .left-sub-sidebar
    = render 'nav_product', add_url: new_product_path(), active_elem: "sub-nav-#{@product.id}", nav_name: 'Products', sub_elems: @products, type: 'show', cat_name: 'Product'
  .right-content
    .x_panel
      .x_title
        %h2 New Product
        %ul.nav.navbar-right.panel_toolbox
          %li
            %a.collapse-link
              %i.fa.fa-chevron-up
          %li
            %a.close-link
              %i.fa.fa-close
        .clearfix
      .x_content.form-group-no-margin
        = render 'form'

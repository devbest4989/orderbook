.right_col{:role => "main"}
  %div
    .page-title
      .title_left
        %h3 Suppliers
      .title_right
        .col-md-5.col-sm-5.col-xs-12.form-group.pull-right.top_search
          .input-group
            %input.form-control{:placeholder => "Search for...", :type => "text"}/
            %span.input-group-btn
              %button.btn.btn-default{:type => "button"} Go!
    .clearfix
    .row
      .col-md-12
        .x_panel
          .x_title
            %h2 Supplier List
            %ul.nav.navbar-right.panel_toolbox
              %li
                %a.collapse-link
                  %i.fa.fa-chevron-up
              %li
                %a.close-link
                  %i.fa.fa-close
            .clearfix
          .x_content.form-group-no-margin
            .row
              .col-md-12{:style => "text-align: right"}
                %a.btn.btn-success.btn-xs{:href => new_supplier_path()}
                  %i.fa.fa-plus
                  Add Supplier
            .row
              / start project list
              %table.table.table-striped.projects
                %thead
                  %tr
                    %th{:style => "width: 1%"} #
                    %th{:style => "width: 10%"} Supplier Name
                    %th{:style => "width: 10%"} Company Name
                    %th{:style => "width: 10%"} Trading Name
                    %th{:style => "width: 10%"} Phone Number
                    %th{:style => "width: 10%"} Email Address
                    %th{:style => "width: 15%"} Billing Address
                    %th{:style => "width: 15%"} Shipping Address
                    %th{:style => "min-width: 10%"} #Edit
                  %tr
                    %form#form_search{:action => suppliers_path(), :method => "get"}
                    %th{:style => "width: 1%"}
                    %th{:style => "width: 10%"}
                      %input.form-control.table-cell{:name => "full_name", :type => "text", :form => "form_search", :value => params[:full_name]}
                    %th{:style => "width: 10%"}
                      %input.form-control.table-cell{:name => "company_name", :type => "text", :form => "form_search", :value => params[:company_name]}
                    %th{:style => "width: 10%"}
                      %input.form-control.table-cell{:name => "tranding_name", :type => "text", :form => "form_search", :value => params[:tranding_name]}
                    %th{:style => "width: 10%"}
                      %input.form-control.table-cell{:name => "phone_number", :type => "text", :form => "form_search", :value => params[:phone_number]}
                    %th{:style => "width: 10%"}
                      %input.form-control.table-cell{:name => "email", :type => "text", :form => "form_search", :value => params[:email]}
                    %th{:style => "width: 15%"}
                    %th{:style => "width: 15%"}
                    %th{:style => "min-width: 10%"}
                      %button.btn.btn-primary.btn-xs{:type => "submit", :form => "form_search" }
                        %i.fa.fa-search
                        Search
                      %a.btn.btn-danger.btn-xs{:href => suppliers_path()}
                        %i.fa.fa-close
                        Reset
                %tbody
                - @suppliers.each do |supplier|
                  %tr
                    %td #
                    %td 
                      =supplier.full_name
                    %td
                      =supplier.company_name
                    %td
                      =supplier.trading_name
                    %td
                      =supplier.phone
                    %td
                      =supplier.email
                    %td 
                      =supplier.billing_address
                    %td 
                      =supplier.shipping_address
                    %td
                      %a.btn.btn-info.btn-xs{:href => edit_supplier_path(supplier)}
                        %i.fa.fa-pencil
                        Edit
                      = link_to supplier, method: :delete, :class => "btn btn-danger btn-xs" do
                        %i.fa.fa-trash-o
                        Delete
              / end project list
            .row{:style => "text-align: center;"}  
              = will_paginate @suppliers, renderer: BootstrapPagination::Rails, :previous_label => '&lsaquo;', :next_label => '&rsaquo;'

.right_col{:role => "main"}
  %div
    .page-title
      .title_left
        %h3 Sales Order
      .title_right
        .col-md-5.col-sm-5.col-xs-12.form-group.pull-right.top_search
          .input-group
            %input.form-control{:placeholder => "Search for...", :type => "text"}/
            %span.input-group-btn
              %button.btn.btn-default{:type => "button"} Go!
    .clearfix
    .row
      .col-md-12
        .x_panel
          .x_title
            %h2 Sales Order List for Customers
            %ul.nav.navbar-right.panel_toolbox
              %li
                %a.collapse-link
                  %i.fa.fa-chevron-up
              %li
                %a.close-link
                  %i.fa.fa-close
            .clearfix
          .x_content
            .row
              .col-md-12{:style => "text-align: right"}
                %a.btn.btn-success.btn-xs{:href => '/order_new'}
                  %i.fa.fa-plus
                  Add Order
            .row
              / start project list
              %table.table.table-striped.projects
                %thead
                  %tr
                    %th{:style => "width: 15%"} Order#
                    %th{:style => "width: 20%"} Customer
                    %th{:style => "width: 15%"} Created Date
                    %th{:style => "width: 15%"} Amount
                    %th{:style => "width: 15%"} Status
                    %th{:style => "min-width: 15%"} Action
                  %tr
                    %form#form_search{:action => '#', :method => "get"}
                    %th{:style => "width: 15%"}
                      %input.form-control.table-cell{:name => "order_no", :type => "text", :form => "form_search", :value => params[:order_no]}
                    %th{:style => "width: 20%"}
                      %input.form-control.table-cell{:name => "full_name", :type => "text", :form => "form_search", :value => params[:full_name]}
                    %th{:style => "width: 15%"}
                      %input.form-control.table-cell{:name => "company_name", :type => "text", :form => "form_search", :value => params[:company_name]}
                    %th{:style => "width: 15%"}
                      %input.form-control.table-cell{:name => "tranding_name", :type => "text", :form => "form_search", :value => params[:tranding_name]}
                    %th{:style => "width: 15%"}
                      %input.form-control.table-cell{:name => "phone_number", :type => "text", :form => "form_search", :value => params[:phone_number]}
                    %th{:style => "min-width: 15%"}
                      %button.btn.btn-primary.btn-xs{:type => "submit", :form => "form_search" }
                        %i.fa.fa-search
                        Search
                      %a.btn.btn-danger.btn-xs{:href => '#'}
                        %i.fa.fa-close
                        Reset
                %tbody
                  %tr
                    %td SO-29340
                    %td Customer
                    %td 2016-10-01
                    %td $100
                    %td
                      %span.label.label-primary.label-md Booked
                    %td
                      %a.btn.btn-info.btn-xs{:href => '#'}
                        %i.fa.fa-pencil
                        Edit
                      = link_to '#', method: :delete, :class => "btn btn-danger btn-xs" do
                        %i.fa.fa-trash-o
                        Delete
                  %tr
                    %td SO-29340
                    %td Customer
                    %td 2016-10-01
                    %td $100
                    %td
                      %span.label.label-success.label-md Shipped
                    %td
                      %a.btn.btn-info.btn-xs{:href => '#'}
                        %i.fa.fa-pencil
                        Edit
                      = link_to '#', method: :delete, :class => "btn btn-danger btn-xs" do
                        %i.fa.fa-trash-o
                        Delete
                  %tr
                    %td SO-29340
                    %td Customer
                    %td 2016-10-01
                    %td $100
                    %td 
                      %span.label.label-warning.label-md Draft
                    %td
                      %a.btn.btn-info.btn-xs{:href => '#'}
                        %i.fa.fa-pencil
                        Edit
                      = link_to '#', method: :delete, :class => "btn btn-danger btn-xs" do
                        %i.fa.fa-trash-o
                        Delete
              / end project list
            .row{:style => "text-align: center;"}  

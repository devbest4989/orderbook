.form-horizontal.form-label-left{:style => "overflow:auto;"}
  .col-md-6.col-sm-6.col-xs-12
    %h4 Order Information
    .form-group
      %label.control-label.col-md-4.col-sm-4.col-xs-12 Sales Order #
      %span.col-md-8.col-sm-8.col-xs-12.field-value          
        = @sales_order.token
    .form-group
      %label.control-label.col-md-4.col-sm-4.col-xs-12 Order Date
      %span.col-md-8.col-sm-8.col-xs-12.field-value          
        = @sales_order.order_date
    .form-group
      %label.control-label.col-md-4.col-sm-4.col-xs-12 Total
      %span.col-md-8.col-sm-8.col-xs-12.field-value          
        = number_to_currency(@sales_order.total_amount)
    .form-group
      %label.control-label.col-md-4.col-sm-4.col-xs-12 Status
      .col-md-8.col-sm-8.col-xs-12.field-value          
        %span{:class => "label label-md #{@sales_order.status_class}"}
          = @sales_order.status.capitalize
    .form-group
      %label.control-label.col-md-4.col-sm-4.col-xs-12 Requested Ship Date
      %span.col-md-8.col-sm-8.col-xs-12.field-value          
        = @sales_order.req_ship_date
    .form-group
      %label.control-label.col-md-4.col-sm-4.col-xs-12 Estimated Ship Date
      %span.col-md-8.col-sm-8.col-xs-12.field-value          
        = @sales_order.estimate_ship_date
    .form-group
      %label.control-label.col-md-4.col-sm-4.col-xs-12 Payment Terms
      %span.col-md-8.col-sm-8.col-xs-12.field-value          
        = @sales_order.payment_term_info
    .form-group
      %label.control-label.col-md-4.col-sm-4.col-xs-12 Description
      %span.col-md-8.col-sm-8.col-xs-12.field-value          
        = @sales_order.notes
  .col-md-6.col-sm-6.col-xs-12
    %h4 Customer Information
    .form-group
      %label.control-label.col-md-4.col-sm-4.col-xs-12 Customer Name
      %span.col-md-8.col-sm-8.col-xs-12.field-value          
        = @sales_order.customer.name
    .form-group
      %label.control-label.col-md-4.col-sm-4.col-xs-12 Customer Info
      .col-md-8.col-sm-8.col-xs-12.field-value
        Email : 
        = @sales_order.customer.email
        %br
        Phone : 
        = @sales_order.customer.phone
        %br
        Fax : 
        = @sales_order.customer.fax
        %br          
    .form-group
      %label.control-label.col-md-4.col-sm-4.col-xs-12 Billing Address
      %span.col-md-8.col-sm-8.col-xs-12.field-value          
        = @sales_order.customer.billing_address
    .form-group
      %label.control-label.col-md-4.col-sm-4.col-xs-12 Shipping Address
      %span.col-md-8.col-sm-8.col-xs-12.field-value          
        = @sales_order.customer.shipping_address
  .col-md-12{:style => "overflow:auto;"}
    %h4 Product Information
    / start project list
    %div{:style => "min-width:900px;"}
      %table#product_list.table.table-bordered.projects.margin-bottom-5{:style => "table-layout: fixed;"}
        %thead
          %tr
            %th{:style => "width: 15%"} SKU
            %th{:style => "width: 15%"} Product Name
            %th{:style => "width: 9%"} Original Qty
            %th{:style => "width: 9%"} Return Qty
            %th{:style => "width: 9%"} Cancel Qty
            %th{:style => "width: 9%"} Shipped
            %th{:style => "width: 7%"} Discount (%)
            %th{:style => "width: 7%"} Tax (%)
            %th{:style => "width: 10%"} Unit Price
            %th{:style => "width: 10%"} Line Total
        %tbody
        - @sales_order.sales_items.each do |item|
          %tr
            %td 
              =item.sold_item.sku    
            %td 
              =item.sold_item.name
            %td 
              =item.quantity
            %td 
              =(item.return_quantity == 0) ? "" : item.return_quantity
            %td 
              =(item.cancel_quantity == 0) ? "" : item.cancel_quantity
            %td 
              =(item.shipped_quantity == 0) ? "" : item.shipped_quantity
            %td 
              =item.discount_rate
            %td 
              =item.tax_rate
            %td.money 
              =item.unit_price
            %td.money 
              =item.sub_total
      %table.table.projects
        %tbody
          %tr
            %td{:style => 'border:none; background: white; width:80%;'} 
            %td{:style => 'border:none; background: white; width:10%;'} 
              %b SubTotal:
            %td#sub_total_cell.money{:style => 'border:none; background: white; width:10%;'}
              = @sales_order.sub_total
          %tr
            %td{:style => 'border:none; background: white; width:80%;'} 
            %td{:style => 'border:none; background: white; width:10%;'} 
              %b Discount:
            %td#discount_total_cell.money{:style => 'border:none; background: white; width:10%;'}
              = @sales_order.discount_amount
          %tr
            %td{:style => 'border:none; background: white; width:80%;'} 
            %td{:style => 'border:none; background: white; width:10%;'} 
              %b Tax:
            %td#tax_total_cell.money{:style => 'border:none; background: white; width:10%;'}
              = @sales_order.tax_amount
          %tr
            %td{:style => 'border:none; background: white; width:80%;'} 
            %td{:style => 'border:none; background: white; width:10%;'} 
              %b Total:
            %td#total_cell.money{:style => 'border:none; background: white; width:10%;'}
              %b
                = @sales_order.total_amount

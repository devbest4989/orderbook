            %a{"data-toggle" => "tab", :href => "#tab_pack", "aria-expanded" => "false"} 
              %i.fa.fa-cube
              Packaging
          %li.tab-shipment
            %a{"data-toggle" => "tab", :href => "#tab_shipment", "aria-expanded" => "false"} 
              %i.fa.fa-truck
              Shipments
          %li.tab-invoice
            %a{"data-toggle" => "tab", :href => "#tab_invoice", "aria-expanded" => "false"} 
              %i.fa.fa-file-text-o
